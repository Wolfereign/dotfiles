[colors]
background = rgba(40, 42, 54, 0.68)
foreground = #f8f8f2

current_line = #44475a
selection = #44475a 
comment = #6272a4

cyan = #8be9fd
green = #50fa7b
orange = #ffb86c
pink = #ff79c6
purple = #bd93f9
red = #ff5555
yellow = #f1fa8c

[fonts]
font-0 = Roboto Mono:size=12:antialias=false;1
font-1 = 3270Medium Nerd Font Mono:style=Medium:pixelsize=20:antialias=false;3

[global/wm]
margin-top = 5
margin-bottom = 5

[settings]
screenchange-reload = true

[bar/default]
background = ${colors.background}
foreground = ${colors.foreground}

width = 100%
height = 25
radius = 0
fixed-center = true

line-size = 2
;line-color = ${colors:current_line}

border-size = 0
;border-color = ${colors:background}	

spacing = 1
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}

[bar/top]
inherit = bar/default
bottom = false

modules-left = cpu temperature memory filesystem
modules-center = i3
modules-right = volume date powermenu

tray-position = right
tray-padding = 0
tray-transparent = true
tray-background = ${colors.background}

;wm-restack = i3
;override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = ${colors.cyan}
label-mode-background = ${colors.comment}
label-focused = %name%
label-focused-background = ${colors.current_line}
label-focused-underline= ${colors.green}
label-focused-padding = 2
label-unfocused = %name%
label-unfocused-padding = 2
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}
label-urgent = %index%
label-urgent-background = ${colors.orange}
label-urgent-padding = 2

[module/cpu]
type = internal/cpu
interval = 0.5

format = <label> <ramp-coreload>
format-padding = 5

label = 
label-foreground = ${colors.aqua}
label-font = 3

ramp-coreload-0 = ▁
ramp-coreload-0-font = 5
ramp-coreload-0-foreground = ${colors.green}
ramp-coreload-1 = ▂
ramp-coreload-1-font = 5
ramp-coreload-1-foreground = ${colors.green}
ramp-coreload-2 = ▃
ramp-coreload-2-font = 5
ramp-coreload-2-foreground = ${colors.green}
ramp-coreload-3 = ▄
ramp-coreload-3-font = 5
ramp-coreload-3-foreground = ${colors.green}
ramp-coreload-4 = ▅
ramp-coreload-4-font = 5
ramp-coreload-4-foreground = ${colors.blue}
ramp-coreload-5 = ▆
ramp-coreload-5-font = 5
ramp-coreload-5-foreground = ${colors.blue}
ramp-coreload-6 = ▇
ramp-coreload-6-font = 5
ramp-coreload-6-foreground = ${colors.red}
ramp-coreload-7 = █
ramp-coreload-7-font = 5
ramp-coreload-7-foreground = ${colors.red}

[module/memory]
type = internal/memory
interval = 3

format = <label> <bar-used>
format-padding = 5

label = 

bar-used-indicator =
bar-used-width = 10
bar-used-foreground-0 = ${colors.green}
bar-used-foreground-1 = ${colors.green}
bar-used-foreground-2 = ${colors.blue}
bar-used-foreground-3 = ${colors.red}
bar-used-fill = ▐
bar-used-empty = ▐
bar-used-empty-foreground = #444444

[module/date]
type = internal/date
interval = 1

format = <label>
format-background = ${colors.yellow}
format-foreground = ${colors.grey}
format-padding = 3

label = %date% %time%
date =  %A, %b. %d
time =  %H:%M:%S

[module/volume]
type = internal/volume
handle-events = true

format-volume = <label-volume>
format-volume-prefix = "墳"
format-muted-prefix = "ﱝ"
label-volume = %percentage:3%%
label-muted = MUTE

click-right = exec pavucontrol

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 70
;prefix = " "

format = <label>
format-underline = ${colors.green}
format-warn = <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.orange}

[module/filesystem]
type = internal/fs
interval = 25
fixed-values = true
spacing = 2
prefix = " "

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.red}

format-mounted-underline = ${colors.cyan}

[module/powermenu]
type = custom/menu

expand-right = true
format-spacing = 1

label-open = ""
label-open-foreground = ${colors.foreground}
label-close = ""
label-close-foreground = ${colors.orange}
label-separator = |
label-separator-foreground = ${colors.foreground}

menu-0-0 = Restart
menu-0-0-exec = menu-open-1
menu-0-1 = Shutdown
menu-0-1-exec = menu-open-2

menu-1-0 = Cancel
menu-1-0-exec = menu-open-0
menu-1-1 = Restart
menu-1-1-exec = systemctl reboot

menu-2-0 = Shutdown
menu-2-0-exec = systemctl poweroff
menu-2-1 = Cancel
menu-2-1-exec = menu-open-0

[module/systray]
type = internal/systray

format = <label-toggle> <tray-clients> <label-toggle>
format-spacing = 2

label-toggle = hide
label-toggle-alt = show
label-toggle-padding = 2
label-toggle-background = ${colors.background}
label-toggle-foreground = ${colors.foreground}
