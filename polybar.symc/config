[colors]
background = rgba(40, 42, 54, 0.68)
foreground = #f8f8f2

current_line = #44475a
selection = #44475a 
comment = #6272a4

cyan = #8be9fd
green = #50fa7b
orange = #ffb86c
pink = #ff79c6
purple = #bd93f9
red = #ff5555
yellow = #f1fa8c

[fonts]
font-0 = Roboto Mono:size=12:antialias=false;1
font-1 = 3270Medium Nerd Font Mono:style=Medium:pixelsize=20:antialias=false;3

[global/wm]
margin-top = 5
margin-bottom = 5

[settings]
screenchange-reload = true

[bar/default]
background = ${colors.background}
foreground = ${colors.foreground}

width = 100%
height = 25
radius = 0
fixed-center = true

line-size = 2
;line-color = ${colors:current_line}

border-size = 0
;border-color = ${colors:background}	

padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 1

font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}

[bar/top]
inherit = bar/default
bottom = false

modules-left = powermenu cpu temperature memory filesystem
modules-center = i3
modules-right = volume date

tray-position = right
tray-padding = 1
tray-transparent = true
tray-background = ${colors.background}

;wm-restack = i3
;override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = ${colors.cyan}
label-mode-background = ${colors.comment}
label-focused = %name%
label-focused-background = ${colors.current_line}
label-focused-underline= ${colors.green}
label-focused-padding = 2
label-unfocused = %name%
label-unfocused-padding = 2
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}
label-urgent = %index%
label-urgent-background = ${colors.orange}
label-urgent-padding = 2

[module/cpu]
type = internal/cpu
interval = 0.5

format = <label>
format-prefix = " "
foramt-prefix-foreground = ${colors.purple}
format-underline = ${colors.purple}
label = CPU: %percentage%
label-foreground = ${colors.foreground}


[module/memory]
type = internal/memory
interval = 3

format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
label = MEM: %percentage_used%%
label-foreground = ${colors.foreground}
format-underline = ${colors.green}


[module/date]
type = internal/date
interval = 1

format = <label>
format-foreground = ${colors.foreground}

label = %date% %time%
date =  %A, %d %b %Y
date-underline = ${colors.cyan}
time =  %I:%M %p
time-underline = ${colors.purple}

[module/volume]
type = internal/volume
handle-events = true

label-volume = %percentage:3%%
label-muted = MUTE

format-volume = <label-volume>
format-volume-prefix = "墳"
format-volume-underline = ${colors.green}

format-muted-prefix = "ﱝ"
format-muted-underline = ${colors.red}

click-right = exec pavucontrol

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 70

format = <label>
format-prefix = " "
format-underline = ${colors.green}
format-warn = <label-warn>

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.orange}

[module/filesystem]
type = internal/fs
interval = 25
fixed-values = true
spacing = 2

mount-0 = /

label-mounted =  %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-mounted-underline = #0a81f5

label-unmounted =  %mountpoint% not mounted
label-unmounted-foreground = ${colors.red}
label-unmounted-underline = ${colors.red}

[module/powermenu]
type = custom/menu

expand-right = true
format-spacing = 1

label-open = ""
label-open-foreground = ${colors.foreground}
label-close = ""
label-close-foreground = ${colors.orange}
label-separator = |
label-separator-foreground = ${colors.foreground}

menu-0-0 = Restart
menu-0-0-exec = menu-open-1
menu-0-1 = Shutdown
menu-0-1-exec = menu-open-2

menu-1-0 = Cancel
menu-1-0-exec = menu-open-0
menu-1-1 = Restart
menu-1-1-exec = systemctl reboot

menu-2-0 = Shutdown
menu-2-0-exec = systemctl poweroff
menu-2-1 = Cancel
menu-2-1-exec = menu-open-0

[module/systray]
type = internal/systray

format = <label-toggle> <tray-clients> <label-toggle>
format-spacing = 2

label-toggle = hide
label-toggle-alt = show
label-toggle-padding = 2
label-toggle-background = ${colors.background}
label-toggle-foreground = ${colors.foreground}
